#!/bin/bash

###############################################################################

echo "disabling fail2ban................\t\t\n"
rm -f /var/smoothwall/mods/fail2ban

echo "If you would like to re-enabled fail2ban at some point in the future, "
echo "simply run the following command:"
echo "\tpushd /var/smoothwall/mods; ln -snf ../mods-available/fail2ban fail2ban"
echo
echo
echo "If you would like to completely remove fail2ban, run this command:"
echo "\trm -rf /var/smoothwall/mods-available/fail2ban"
echo

